indent_size = 2
indent_style = tab # should be space

[*.{py,sh}]
indent_style = tab

[{Makefile.am,Makefile.sources,configure.ac}]
tab_width = 8

[{meson.build,meson_options.txt}]
tab_width = 8
indent_style = space
indent_size = 2
